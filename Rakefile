# -*- ruby -*-
$:.unshift(File.dirname(__FILE__)+"/lib")
require 'rubygems'
require 'hoe'
require 'rserve'
Hoe.plugin :git
Hoe.spec 'ruby-rserve' do
  self.testlib=:rspec
   self.version=Rserve::VERSION
   self.rubyforge_name = 'ruby-statsample' # if different than 'rserve'
  self.developer('Claudio Bustos', 'FIX@example.com')
end

